<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <ImageView
      android:id="@+id/header"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:background="@color/colorPrimaryDark"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/teamAlphaFab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end|bottom"
      android:layout_margin="16dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/header"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/header"
      android:backgroundTint="@color/main_course_level_items_title_shadow"
      android:elevation="6dp"
      />

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/teamBetaFab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end|bottom"
      android:layout_margin="16dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/header"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/header"
      />

  <TextView
      android:id="@+id/teamBattleTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="Team Alpha Vs Team Beta"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/header"
      />
  <ImageView
      android:id="@+id/TeamAlphaImage"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="32dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/header"
      tools:srcCompat="@tools:sample/avatars"
      />

  <ImageView
      android:id="@+id/TeamBeta"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="32dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/header"
      tools:srcCompat="@tools:sample/avatars"
      />
  <TextView
      android:id="@+id/teamAlphaScore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="24dp"
      android:text="5"
      android:textSize="30sp"
      app:layout_constraintBottom_toBottomOf="@+id/TeamAlphaImage"
      app:layout_constraintStart_toEndOf="@+id/TeamAlphaImage"
      app:layout_constraintTop_toTopOf="@+id/teamBattleTitle"
      />

  <TextView
      android:id="@+id/semiColon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="24dp"
      android:text=":"
      android:textSize="30sp"
      app:layout_constraintBottom_toBottomOf="@+id/TeamAlphaImage"
      app:layout_constraintEnd_toStartOf="@+id/teamBetaScore"
      app:layout_constraintStart_toEndOf="@+id/teamAlphaScore"
      app:layout_constraintTop_toBottomOf="@+id/header"
      />

  <TextView
      android:id="@+id/teamBetaScore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="24dp"
      android:text="2"
      android:textSize="30sp"
      app:layout_constraintBottom_toBottomOf="@+id/TeamBeta"
      app:layout_constraintEnd_toStartOf="@+id/TeamBeta"
      app:layout_constraintTop_toTopOf="@+id/teamBattleTitle"
      />

  <TextView
      android:id="@+id/teamAlphaName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      android:text="Team Alpha"
      app:layout_constraintEnd_toEndOf="@+id/teamAlphaScore"
      app:layout_constraintTop_toBottomOf="@+id/TeamAlphaImage"
      />
  <TextView
      android:id="@+id/teamBetaName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="Team Beta"
      app:layout_constraintStart_toStartOf="@+id/teamBetaScore"
      app:layout_constraintTop_toBottomOf="@+id/TeamBeta"
      />

</android.support.constraint.ConstraintLayout>