<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <ImageView
      android:id="@+id/header"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:background="@color/colorPrimaryDark"
      tools:layout_editor_absoluteX="252dp"
      tools:layout_editor_absoluteY="264dp"
      />

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/teamAlphaFab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end|bottom"
      android:layout_margin="16dp"
      android:backgroundTint="@color/main_course_level_items_title_shadow"
      tools:layout_editor_absoluteX="288dp"
      tools:layout_editor_absoluteY="19dp"
      />

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/teamBetaFab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end|bottom"
      android:layout_margin="16dp"
      tools:layout_editor_absoluteX="217dp"
      tools:layout_editor_absoluteY="455dp"
      />

  <TextView
      android:id="@+id/teamBattleTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Team Alpha Vs Team Beta"
      tools:layout_editor_absoluteX="163dp"
      tools:layout_editor_absoluteY="99dp"
      />
  <ImageView
      android:id="@+id/TeamAlphaImage"
      android:layout_width="100dp"
      android:layout_height="100dp"
      tools:layout_editor_absoluteX="23dp"
      tools:layout_editor_absoluteY="164dp"
      tools:srcCompat="@tools:sample/avatars"
      />

  <ImageView
      android:id="@+id/TeamBeta"
      android:layout_width="100dp"
      android:layout_height="100dp"
      tools:layout_editor_absoluteX="228dp"
      tools:layout_editor_absoluteY="118dp"
      tools:srcCompat="@tools:sample/avatars"
      />
  <TextView
      android:id="@+id/teamAlphaScore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="5"
      android:textSize="30sp"
      tools:layout_editor_absoluteX="311dp"
      tools:layout_editor_absoluteY="430dp"
      />

  <TextView
      android:id="@+id/semiColon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=":"
      android:textSize="30sp"
      tools:layout_editor_absoluteX="123dp"
      tools:layout_editor_absoluteY="58dp"
      />

  <TextView
      android:id="@+id/teamBetaScore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="2"
      android:textSize="30sp"
      tools:layout_editor_absoluteX="184dp"
      tools:layout_editor_absoluteY="19dp"
      />

  <TextView
      android:id="@+id/teamAlphaName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Team Alpha"
      tools:layout_editor_absoluteX="56dp"
      tools:layout_editor_absoluteY="452dp"
      />
  <TextView
      android:id="@+id/teamBetaName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Team Beta"
      tools:layout_editor_absoluteX="34dp"
      tools:layout_editor_absoluteY="126dp"
      />

</android.support.constraint.ConstraintLayout>